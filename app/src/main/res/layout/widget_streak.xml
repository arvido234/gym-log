<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <ImageView
        android:id="@+id/icon_flame"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_workout_dot"
        android:contentDescription="Streak Icon"
        android:layout_marginBottom="4dp"
        android:tint="#FFFFFF"/>

    <TextView
        android:id="@+id/widget_streak_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#44000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"/>

    <TextView
        android:id="@+id/widget_streak_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week Streak"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:textColor="#EEFFFFFF"
        android:letterSpacing="0.1"/>

</LinearLayout>
